import static org.assertj.core.api.Assertions.*;
import static org.testng.Assert.assertFalse;
import static org.testng.Assert.assertTrue;

public class BoardTest {
	
	requests request=new requests();
	
	static int board_id;

	@Test
	public void createboardtest() throws Exception {
			String response=request.sendGet("http://10.0.1.86/snl/rest/v1/board/new.json");
			JSONObject obj=new JSONObject(response);
			JSONObject responseObj=obj.getJSONObject("response");
			JSONObject board=responseObj.getJSONObject("board");
			assertThat(responseObj.get("status")).isEqualTo(1);
			board_id=(Integer) board.get("id");
	}
	
	@Test
	public void getlistofboardtest() throws Exception
	{
		String response=request.sendGet("http://10.0.1.86/snl/rest/v1/board.json");
		JSONObject obj=new JSONObject(response);
		JSONObject responseObj=obj.getJSONObject("response");
		assertThat(responseObj.get("status")).isEqualTo(1);
	}
	
	@Test(dependsOnMethods={"createboardtest"})
	public void getddetailofboard() throws Exception
	{
		String response=request.sendGet("http://10.0.1.86/snl/rest/v1/board/"+board_id+".json");
		JSONObject obj=new JSONObject(response);
		JSONObject responseObj=obj.getJSONObject("response");
		JSONObject board=responseObj.getJSONObject("board");
		assertThat(responseObj.get("status")).isEqualTo(1);
		assertThat(board.get("id")).isEqualTo(board_id);
	}
	
	@Test(dependsOnMethods={"createboardtest"})
	public void resetboardtest() throws Exception
	{
		String response=request.putrequest("http://10.0.1.86/snl/rest/v1/board/"+board_id+".json",null);
		JSONObject obj=new JSONObject(response);
		JSONObject responseObj=obj.getJSONObject("response");
		JSONObject board=responseObj.getJSONObject("board");
		assertThat(responseObj.get("status")).isEqualTo(1);
		assertThat(board.get("players")).isEqualTo(null);
	}
	
	@Test(dependsOnMethods={"createboardtest"})
	public void deleteboardtest() throws Exception
	{
		String response=request.deleteRequest("http://10.0.1.86/snl/rest/v1/board/"+board_id+".json");
		JSONObject obj=new JSONObject(response);
		JSONObject responseObj=obj.getJSONObject("response");
		assertThat(responseObj.get("status")).isEqualTo(1);
		BoardTest board=new BoardTest();
		getddetailofboard();
		
		
		
	}
	

}
